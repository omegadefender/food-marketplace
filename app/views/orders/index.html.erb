<p id="notice"><%= notice %></p>

<h1>Current Listings</h1>
<div class="order_listing">
<table class="order_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cost per unit</th>
      <th>Pickup location</th>
      <th>Food Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <% if product.user_id == current_user.id %>
        <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.cost_per_unit %></td>
        <td><%= product.pickup_location %></td>
        <td><%= product.food_category %></td>
        <td><%= product.user.firstname %></td>

        <td><%= link_to 'Show', product %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div>
<br>


<!-- ################################# Purchased section ################################ -->
<h1 class="header">Purchase History</h1>


<div class="body">
<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Total amount</th>
      <th>Payment details</th>
      <th>Receipt</th>
      <th>Product</th>
      <th>Posted By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if order.user_id == current_user.id%>
        <tr>
          <td><%= order.quantity %></td>
          <td><%= order.total_amount %></td>
          <td><%= order.payment_details %></td>
          <td><%= order.receipt %></td>
          <td><%= order.product.title %></td>
          <td><%= order.product.user.firstname %> <%= order.product.user.lastname %></td>
          <td><%= link_to 'Show', order %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

