  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :cost_per_unit %>
    <%= form.text_field :cost_per_unit %>
  </div>

  <div class="field">
    <%= form.label :pickup_location %>
    <%= form.text_field :pickup_location %>
  </div>

  <div class="field">
    <%= form.label :expiry %>
    <%= form.datetime_select :expiry %>
  </div>

  <div class="field">
    <%= form.label :food_category %>
    <%= form.text_field :food_category %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
